@model BankruptcyLaw.Web.ViewModels.Documents.AllClientDocumentsForCaseViewModel
@{
    ViewData["Title"] = "Client Documents";
}

<h1>@this.ViewData["Title"]</h1>
<hr />

<a type="button" class="btn btn-success" href="/ClientDocuments/Upload?CaseId=@Model.CaseId">Upload a new File</a>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Document Name</th>
                        <th scope="col">Upload Date</th>
                        <th scope="col">Size</th>
                        <th scope="col">Format</th>
                        <th scope="col">Uploaded by</th>
                        <th align="center" scope="col">Download</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Documents)
                    {
                        <tr>
                            <td>@d.Name</td>
                            <td>@d.CreatedOn.Date.ToString("yyyy-MM-dd")</td>
                            <td>@d.Size kb</td>
                            <td>@d.Extension</td>
                            <td>@d.UploaderName</td>
                            <td>
                                <a type="button" class="btn btn-success" href="/=XXX">Download</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
