@model BankruptcyLaw.Web.ViewModels.Cases.CaseDetailsViewModel
@{
    ViewData["Title"] = "Case Details";
}

<h1>@this.ViewData["Title"]</h1>

<h1>Welcome From new Case</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">DateFiled</th>
            <th scope="col">CaseNumber</th>
            <th scope="col">CaseStatus</th>
            <th scope="col">AttorneyName</th>
            <th scope="col">JudgeName</th>
            <th scope="col">TrusteeName</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>DateFiled</td>
            <td>CaseNumber</td>
            <td>CaseStatus</td>
            <td>AttorneyName</td>
            <td>JudgeName</td>
            <td>TrusteeName</td>
        </tr>
    </tbody>
</table>
<div class="row mt-4 mb-4">
    <div class="btn-group-vertical col-lg-3">
        <button type="button" class="btn btn-secondary">View Court Documents</button>
        <button type="button" class="btn btn-secondary">View Client Documents</button>
        <button type="button" class="btn btn-secondary">View Creditors</button>
    </div>
    <div class="col-lg-9">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"> Note 1</textarea>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">Note 2</textarea>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">Note 3</textarea>
    </div>
</div>
